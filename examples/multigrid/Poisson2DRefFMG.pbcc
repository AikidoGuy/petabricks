#ifndef POISSON2DMGV_PBCC
#define POISSON2DMGV_PBCC

#include "Poisson2DResidual.pbcc"
#include "Poisson2DSOR.pbcc"
#include "mgv2D.pbcc"
#include "fmgv2D.pbcc"

// stub transform Poisson2Dfmgv => fmgv2D
// performance note: Y can point to the same matrix region as X
transform Poisson2Dfmgv
from X[n,n], B[n,n], numIterations
to Y[n,n]
{
  to (Y y) from (X x, B b, numIterations num)
  {
    fmgv2D(y, x, b, num);
  }
}

#endif // POISSON2DMGV_PBCC
