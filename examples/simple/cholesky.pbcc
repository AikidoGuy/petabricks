	       MatrixRegion2D x2_1;	       	  	       
	       x1_1 = l.region(0,n/2,L11.width()/2,n);
	       trilsolve(x1_1.transposed(), L11_l11, a.region(0,n/2,L11.width()/2,n).transposed());
	       x2_1 = l.region(L11.width()/2,n/2,L11.width(),n); 
	       MatrixCholeskyX2(x2_1, x1_1, l21t, l22, a.region(L11.width()/2,n/2,L11.width(),n));


