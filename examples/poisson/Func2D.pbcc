#ifndef FUNC2D_PBCC
#define FUNC2D_PBCC

transform Func2D
from IN[n+2,n+2]
to OUT[n+2,n+2]
{
  primary OUT.cell(i,j) from (IN.cell(i,j) ce,
                              IN.cell(i-1,j) we,
                              IN.cell(i+1,j) ea,
                              IN.cell(i,j-1) no,
                              IN.cell(i,j+1) so)
  {
    return 4 * ce - (we + ea + no + so);
  }

  secondary OUT.cell(i,j) from ()
  {
    return 0;
  }
}

#endif // FUNC2D_PBCC

