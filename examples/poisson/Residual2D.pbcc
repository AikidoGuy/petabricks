#ifndef RESIDUAL2D_PBCC
#define RESIDUAL2D_PBCC

transform Residual2D
from X[n,n], B[n,n]
to  R[n,n]
{
   //interior components
   R.cell(i,j) from(B.cell(i,j) b, 
    	 	    X.cell(i,j+1) xn,
                    X.cell(i+1,j) xe,	
		    X.cell(i,j-1) xs,
		    X.cell(i-1,j) xw,
		    X.cell(i,j) me   )
   {
     return b - (4*me-xn-xe-xs-xw);								
   }
   
   //boundary is 0
   secondary R.cell(i,j) from() {return 0;}

}

#endif // RESIDUAL2D_PBCC

