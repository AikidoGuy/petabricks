//Multigrid V-cycle 2D
//assume dimension n = 2^k + 1

%{
  JTUNABLE(full_prec_case, 5);
  JTUNABLEARRAY(full_levelTrained, 30, 0);
%}

#include "../add.pbcc"
#include "Interpolate2Dnew.pbcc"
#include "Restrict2Dnew.pbcc"
#include "Residual2D.pbcc"
#include "SOR2D.pbcc"
#include "BS2D.pbcc"
#include "mgv2D.pbcc"
#include "ComputeError.pbcc"
#include "Poisson2D.pbcc"

#define CAT( a, b) _CAT(a,b)
#define _CAT( a, b) __CAT(a ## b)
#define __CAT(ab) ab

#define FULL_POISSON_PRECISION_1 1e-1
#define FULL_POISSON_PRECISION_2 1e-3
#define FULL_POISSON_PRECISION_3 1e-5
#define FULL_POISSON_PRECISION_4 1e-7
#define FULL_POISSON_PRECISION_5 1e-9

#define CURPREC 1
#include "FullPoisson2D_InnerTransform.pbcc"
#undef CURPREC
#define CURPREC 2
#include "FullPoisson2D_InnerTransform.pbcc"
#undef CURPREC
#define CURPREC 3
#include "FullPoisson2D_InnerTransform.pbcc"
#undef CURPREC
#define CURPREC 4
#include "FullPoisson2D_InnerTransform.pbcc"
#undef CURPREC
#define CURPREC 5
#include "FullPoisson2D_InnerTransform.pbcc"
#undef CURPREC

transform FullPoisson2D
from X[n,n], B[n,n]
to  Y[n,n]
through zeros[(n+1)/2,(n+1)/2]
{
  zeros.cell(i,j) from() {
    return 0;
  }

  to (Y y) from (X x, B b, zeros z)
  {
    double error, newError, oldError, change;
    int level = (int) log2(n-1);
    MatrixRegion2D t, r, est;

    JASSERT(floor(log2(n-1)) == log2(n-1))(n)(floor(log2(n-1)))(log2(n-1)).Text("input must be 2^k+1");
    JASSERT(n > 1)(n).Text("input must be larger than 1");

    if (HecuraRuntime::isTrainingRun() && full_levelTrained[level] == 0) {

//      printf("Training run for level %d\n", level);
      MatrixRegion2D actual;
      if (level < 4) {
        actual = BS2D(x, b);
      } else {
        actual = mgv2D(x, b, 15);
      }
      error = (double) ComputeError(x, actual);
//      printf("initial error = %g\n", error);

#define CURPREC 1
#include "FullPoisson2D_TrainingLoop.pbcc"
#undef CURPREC
#define CURPREC 2
#include "FullPoisson2D_TrainingLoop.pbcc"
#undef CURPREC
#define CURPREC 3
#include "FullPoisson2D_TrainingLoop.pbcc"
#undef CURPREC
#define CURPREC 4
#include "FullPoisson2D_TrainingLoop.pbcc"
#undef CURPREC
#define CURPREC 5
#include "FullPoisson2D_TrainingLoop.pbcc"
#undef CURPREC

      full_levelTrained[level].setValue(1);

    } else {
//      printf("Timing run for level %d, precision %d\n", level, (int) prec_case);
      switch (full_prec_case) {
        case 1:
          FullPoisson2D_Inner_Prec1(y, x, b);
          break;
        case 2:
          FullPoisson2D_Inner_Prec2(y, x, b);
          break;
        case 3:
          FullPoisson2D_Inner_Prec3(y, x, b);
          break;
        case 4:
          FullPoisson2D_Inner_Prec4(y, x, b);
          break;
        case 5:
          FullPoisson2D_Inner_Prec5(y, x, b);
          break;
      }
    }
  }
}

